<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Ekip Bilgileri</h3>
                    <button type="button" class="btn btn-success float-right" data-toggle="modal" data-target="#modal-lg">
                        Ekip Ekle
                    </button>
                </div>
                <div class="card-body">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>FullName</th>
                                <th>PhotoPath</th>
                                <th>Role</th>
                                <th>Twitter</th>
                                <th>Facebook</th>
                                <th>Instagram</th>
                                <th>LinkedIn</th>
                                <th>Description</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody style="text-align: center;">
                            @if (Model != null)
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="align-middle">@item.FullName</td>
                                        <td class="align-middle">
                                            @if (item.PhotoPath != null)
                                            {
                                                <img src="/../..@item.PhotoPath" style="height: auto; width: 3.1rem; border-radius: 50%;">
                                            }
                                            else
                                            {
                                                <img src="/admin/dist/img/noimage.png" style="height: auto; width: 3.1rem; border-radius: 50%;">
                                            }
                                        </td>
                                        <td class="align-middle">@item.Role</td>
                                        <td class="align-middle">@item.Twitter</td>
                                        <td class="align-middle">@item.Facebook</td>
                                        <td class="align-middle">@item.Instagram</td>
                                        <td class="align-middle">@item.LinkedIn</td>
                                        <td class="align-middle">@(item.Description.Length > 20 ? item.Description.Substring(0, 20) + "..." : item.Description)</td>
                                        <td class="project-actions text-right align-middle">
                                            <div style="text-align: center;">
                                                <button type="button" class="btn btn-success btn-xs btnShow" url="/admin/FTeam/View/" vId="@item.Id">
                                                    <i class="fa fa-eye">
                                                    </i>
                                                    Göster
                                                </button>
                                                <button type="button" class="btn btn-info btn-xs btnEdit" url="/admin/FTeam/Edit/" vId="@item.Id">
                                                    <i class="fas fa-pencil-alt">
                                                    </i>
                                                    Düzenle
                                                </button>
                                                <button type="button" class="btn btn-danger btn-xs btnDelete" url="/admin/FTeam/Delete/" vId="@item.Id" itemTitle="@item.FullName">
                                                    <i class="fas fa-trash">
                                                    </i>
                                                    Kaldır
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>FullName</th>
                                <th>PhotoPath</th>
                                <th>Role</th>
                                <th>Twitter</th>
                                <th>Facebook</th>
                                <th>Instagram</th>
                                <th>LinkedIn</th>
                                <th>Description</th>
                                <th>İşlemler</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>