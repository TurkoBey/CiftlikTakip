@using CiftlikTakip.MvcUI.Areas.admin.Models.Items;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<FServiceItem>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Hizmetler</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/Home">Dashboard</a></li>
                    <li class="breadcrumb-item active">Hizmet Bilgileri</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<script>
    // Tabloya özel Düzenleme
    function performEdit(response) {
        $("#txtbaslik").val(response.title);
        $("#txtikon").val(response.icon);
        $("#txtAciklama").val(response.description);
    }
    function tablo() {
        $("#example2").DataTable({
            language: {
                url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/tr.json'
            },
            order: [
                [2, 'asc']
            ],
            "columnDefs": [{
                "targets": 2,
                "orderable": false,
            }],
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "info": true,
            "autoWidth": false,
            "responsive": true,
        });
    }

    function performShow(response, id) {
        $("#spnTitle").text(response.title);
        $("#spnIcon").text(response.icon);
        $("#spnDescription").text(response.description);
    }
</script>
<partial name="AddOrUpdate" />
<partial name="Table" />
<partial name="View" />
