<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">İletişim Bilgileri</h3>
                    <button type="button" class="btn btn-success float-right" data-toggle="modal" data-target="#modal-lg">
                        Personel Ekle
                    </button>
                </div>
                <div class="card-body">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Photo</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>LastIPAddress</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody style="text-align: center;">
                            @if (Model != null)
                            {
                                @foreach (var item in Model.userAccessPermissionItems)
                                {
                                    <tr>
                                        <td class="align-middle"><img src="@ViewBag.RelatedInfo[item.Id].Item1" style="height: auto; width: 3.1rem; border-radius: 50%;"></td>
                                        <td class="align-middle">@item.Username</td>
                                        <td class="align-middle">@item.Email</td>
                                        <td class="align-middle">@item.LastIPAddress</td>
                                        <td class="project-actions text-right align-middle">
                                            <div style="text-align: center;">
                                                <button type="button" class="btn btn-success btn-xs btnShow" url="/admin/Authentication/View/" vId="@item.Id">
                                                    <i class="fa fa-eye">
                                                    </i>
                                                    Göster
                                                </button>
                                                <button type="button" class="btn btn-info btn-xs btnEdit" url="/admin/Authentication/Edit/" vId="@item.Id">
                                                    <i class="fas fa-pencil-alt">
                                                    </i>
                                                    Düzenle
                                                </button>
                                                <button type="button" class="btn btn-danger btn-xs btnDelete" url="/admin/Authentication/Delete/" vId="@item.Id" itemTitle="@item.Username">
                                                    <i class="fas fa-trash">
                                                    </i>
                                                    Kaldır
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Photo</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>LastIPAddress</th>
                                <th>İşlemler</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>