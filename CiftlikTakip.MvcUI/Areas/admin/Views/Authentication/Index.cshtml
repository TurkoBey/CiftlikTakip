@using CiftlikTakip.MvcUI.Areas.admin.Models.ViewModels;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model EmployeeView

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Kullanıcılar</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/Home">Dashboard</a></li>
                    <li class="breadcrumb-item active">Kullanıcılar</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<script>
    // Tabloya özel Düzenleme
    function performEdit(response) {
        $("#txtmail").val(response.username);
        $("#txtadi").val(response.email);
        $("#txtparola").val(response.password);
    }
    function tablo() {
        $("#example2").DataTable({
            language: {
                url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/tr.json'
            },
            order: [
                [0, 'asc']
            ],
            "columnDefs": [{
                "targets": 0,
                "orderable": false,
            }],
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "info": true,
            "autoWidth": false,
            "responsive": true,
        });
    }

    function performShow(response, id) {
        $("#spnPhoto").attr("src", response.image == null ? "/admin/dist/img/noimage.png" : "../../" + response.image);
        $("#spnEmail").text(response.email);
        $("#spnUserName").text(response.username);
    }
</script>
<partial name="NewUser" />
<partial name="Table" />
<partial name="View" />

