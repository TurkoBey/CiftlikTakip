<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Tedarikçi Detayları</h3>
                    <button type="button" class="btn btn-success float-right" data-toggle="modal" data-target="#modal-lg">
                        Tedarikçi Ekle
                    </button>
                </div>
                <div class="card-body">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Firma Adı</th>
                                <th>Ad Soyad</th>
                                <th>E-Posta</th>
                                <th>GSM</th>
                                <th>Sabit No</th>
                                <th>Adres</th>
                                <th>Açıklama</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.CompanyName</td>
                                    <td>@item.FullName</td>
                                    <td>@item.Email</td>
                                    <td>@item.MobileNumber</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>@item.Address</td>
                                    <td>@item.Description</td>
                                    <td class="project-actions text-right">
                                        <a class="btn btn-info btn-xs" href="/TaskManagement/Edit/@item.Id">
                                            <i class="fas fa-pencil-alt">
                                            </i>
                                            Düzenle
                                        </a>
                                        <a class="btn btn-danger btn-xs btnDelete" href="#" itemid="@item.Id">
                                            <i class="fas fa-trash">
                                            </i>
                                            Kaldır
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Firma Adı</th>
                                <th>Ad Soyad</th>
                                <th>E-Posta</th>
                                <th>GSM</th>
                                <th>Sabit No</th>
                                <th>Adres</th>
                                <th>Açıklama</th>
                                <th>İşlemler</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>