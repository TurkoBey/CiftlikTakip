<section id="team" class="team">

    <!--  Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Ekip</h2>
        <p>
            Ekibimiz İle Tanışın
        </p>
    </div><!-- End Section Title -->

    <div class="container">

        <div class="row gy-5">
            @if (Model.FTeamItems != null)
            {
                @foreach (var item in Model.FTeamItems)
                {
                    <div class="col-lg-4 col-md-6 member" data-aos="fade-up" data-aos-delay="100">
                        <div class="member-img">
                            <img src="@item.PhotoPath" class="img-fluid" alt="">
                            <div class="social">
                                <a target="_blank" href="https://twitter.com/@item.Twitter"><i class="bi bi-twitter"></i></a>
                                <a target="_blank" href="https://facebook.com/@item.Facebook"><i class="bi bi-facebook"></i></a>
                                <a target="_blank" href="https://instagram.com/@item.Instagram"><i class="bi bi-instagram"></i></a>
                                <a target="_blank" href="https://linkedin.com/@item.LinkedIn"><i class="bi bi-linkedin"></i></a>
                            </div>
                        </div>
                        <div class="member-info text-center">
                            <h4>@item.FullName</h4>
                            <span>@item.Role</span>
                            <p>@item.Description</p>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>
