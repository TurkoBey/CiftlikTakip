<section id="contact" class="contact">

    <!--  Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>İletişim</h2>
        <p>bizim ile iletişime geçin</p>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4">
            <div class="col-lg-12">
                <form class="php-email-form" data-aos="fade-up" data-aos-delay="200">
                    <div class="row gy-4">

                        <div class="col-md-6">
                            <input type="text" id="txtadsoyad" name="name" class="form-control" placeholder="Adınız Soyadınız" required>
                        </div>

                        <div class="col-md-6 ">
                            <input type="email" id="txteposta" class="form-control" name="email" placeholder="E-Posta Adresiniz" required>
                        </div>

                        <div class="col-md-12">
                            <input type="text" id="txtbaslik" class="form-control" name="subject" placeholder="Başlık" required>
                        </div>

                        <div class="col-md-12">
                            <textarea class="form-control" id="txtmesaj" name="message" rows="6" placeholder="Mesaj" required></textarea>
                        </div>

                        <div class="col-md-12 text-center">
                            <div class="loading">Loading</div>
                            <div class="error-message"></div>
                            <div class="sent-message">Your message has been sent. Thank you!</div>
                            @* <button id="btnLogIn" type="button" class="btn btn-primary btn-block rounded-0">Giriş yap</button> *@
                            <button id="btnSend" type="button">Gönder</button>
                        </div>

                    </div>
                </form>
            </div><!-- End Contact Form -->
            <div class="col-lg-12">
                @if (Model.WebSiteInfoItems != null)
                {
                    <div class="row gy-4">
                        <div class="col-md-6">
                            <div class="info-item" data-aos="fade" data-aos-delay="200">
                                <i class="bi bi-geo-alt"></i>
                                <h3>Adres</h3>
                                <p>@Model.WebSiteInfoItems.Address</p><br>
                            </div>
                        </div><!-- End Info Item -->
                        @{
                            string mobileNumber = Model.WebSiteInfoItems.MobileNumber; // Telefon numarasını alın
                            string phoneNumber = Model.WebSiteInfoItems.PhoneNumber; // Telefon numarasını alın

                            // Telefon numarasını formatına çevirme
                            string formattedMNumber = $"+{mobileNumber.Substring(0, 2)} ({mobileNumber.Substring(2, 3)}) {mobileNumber.Substring(5, 3)}-{mobileNumber.Substring(8, 2)}-{mobileNumber.Substring(10, 2)}";
                            string formattedPNumber = $"+{phoneNumber.Substring(0, 2)} ({phoneNumber.Substring(2, 3)}) {phoneNumber.Substring(5, 3)}-{phoneNumber.Substring(8, 2)}-{phoneNumber.Substring(10, 2)}";
                        }

                        <div class="col-md-6">
                            <div class="info-item" data-aos="fade" data-aos-delay="300">
                                <i class="bi bi-telephone"></i>
                                <h3>Telefon</h3>
                                <p>@formattedMNumber</p>
                                <p>@formattedPNumber</p>
                            </div>
                        </div><!-- End Info Item -->

                        <div class="col-md-6">
                            <div class="info-item" data-aos="fade" data-aos-delay="400">
                                <i class="bi bi-envelope"></i>
                                <h3>E-Posta</h3>
                                <p>@Model.WebSiteInfoItems.Email</p><br>
                            </div>
                        </div><!-- End Info Item -->

                        <div class="col-md-6">
                            <div class="info-item" data-aos="fade" data-aos-delay="500">
                                <i class="bi bi-clock"></i>
                                <h3>Çalışma Saatlerimiz</h3>
                                <p>Pazartesi - Cumartesi</p>
                                <p>9:00 - 19:00</p>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="info-item" data-aos="fade" data-aos-delay="500">
                                <iframe src="@Model.WebSiteInfoItems.GoogleMapsLink" width="1230" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                            </div>
                        </div><!-- End Info Item -->
                    </div>
                }
            </div>
        </div>
    </div>
</section>